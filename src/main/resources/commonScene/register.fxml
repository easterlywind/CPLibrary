<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="register.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cplibrary.controller.common.RegisterView">
    <children>
        <Label layoutX="256.0" layoutY="36.0" stylesheets="@register.css" text="Register" textAlignment="CENTER" textFill="black">
            <font>
                <Font size="24.0" />
            </font>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
        </Label>
        <TextField fx:id="emailTextField" layoutX="169.0" layoutY="83.0" prefWidth="240.0" promptText="Email" stylesheets="@register.css" />
        <TextField fx:id="usernameTextField" layoutX="169.0" layoutY="137.0" prefWidth="240.0" promptText="User Name" stylesheets="@register.css" />
        <PasswordField fx:id="passwordTextField" layoutX="169.0" layoutY="192.0" prefWidth="240.0" promptText="Password" stylesheets="@register.css" />
      <PasswordField fx:id="confirmPasswordTextField" layoutX="169.0" layoutY="249.0" prefWidth="240.0" promptText="Confirm Password" stylesheets="@register.css" />

        <Button fx:id="registerButton" layoutX="329.0" layoutY="325.0" onAction="#registerButtonOnAction" prefHeight="40.0" prefWidth="104.0" stylesheets="@register.css" text="Register" />
      <Label fx:id="registerMessageLabel" layoutX="190.0" layoutY="292.0" prefHeight="24.0" prefWidth="197.0" stylesheets="@register.css" textFill="RED" />
      <Button fx:id="backToLoginButton" layoutX="162.0" layoutY="325.0" mnemonicParsing="false" onAction="#backToLoginButtonOnAction" prefHeight="40.0" prefWidth="104.0" stylesheets="@register.css" text="Login" />
    </children>
</AnchorPane>
